!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xmlns:fb' => "http://www.facebook.com/2008/fbml" }
  %head
    = title :site => 'FIUSM.com', :reverse => true
    -#  FIUSM.com - FIU News, Sports, Opinion, Photos, Student Radio, and more
    %meta{ :content => 'The source for news and entertainment from Student Media at Florida International University', :name => 'description' }
    %meta{ :content => 'fiu, fiusm, beacon, the beacon, golden panthers, florida international, florida international university', :name => 'keywords' }

    = auto_discovery_link_tag(:rss, "http://feeds.feedburner.com/fiustudentmedia", {:title => "FIUSM.com Latest Stories"})

    %link{ :rel => 'stylesheet', :type => 'text/css', :media => 'screen', :charset => 'utf-8', :href => 'http://yui.yahooapis.com/2.8.0r4/build/reset/reset-min.css' }
    %link{ :rel => 'stylesheet', :type => 'text/css', :media => 'screen', :charset => 'utf-8', :href => '/stylesheets/screen.css' }

    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js', :type => 'text/javascript' }
    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js', :type => 'text/javascript' }
    %script{ :src => 'http://ads.fiusm.com/www/delivery/spcjs.php?id=3', :type => 'text/javascript' }

    - require_stylesheet "pages/#{params[:controller]}"
    = resource_tags :defaults => false
  %body
    = fb_connect_javascript_tag
    = init_fb_connect("XFBML", "Connect", :js => :jquery, :app_settings => '{reloadIfSessionStateChanged:true}')
    #parent-wrapper
      #parent
        #header
          %h1= link_to 'FIUSM.com', root_url
          %ul#navigation
            %li= link_to 'News',        '/news'
            %li= link_to 'Sports',      '/sports'
            %li= link_to 'Radio',       '/radio'
            %li= link_to 'Life!',       '/life'
            %li= link_to 'Opinion',     '/opinion'
            %li= link_to 'Multimedia',  '/galleries'
            %li= link_to 'Calendar',    '/calendar'
            %li= link_to 'Classifieds', '/classifieds'
            %li= link_to 'About',       '/about'
        #content-wrapper
          #content
            = yield
        #footer-wrapper
          #footer
            %p
              == &copy; 2008-#{DateTime.now.year} FIUSM.com. A division of #{link_to "FIU Student Media", "http://media.fiu.edu"}.
            %p
              == This website is #{link_to("open source", "http://github.com/fiusm/fiusm.com")}.
